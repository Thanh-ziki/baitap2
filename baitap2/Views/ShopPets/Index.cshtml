@model IEnumerable<baitap2.Models.ShopPet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenPet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiPet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TuoiCuaPet)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenPet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiPet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TuoiCuaPet)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDPet }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDPet }) |
